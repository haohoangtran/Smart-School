<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.quanla.smartschool.activities.AddStudentActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_nameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/et_nameStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_MSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/et_msv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã sinh viên" />
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_capture"
            android:layout_width="wrap_content"
            android:text="Ảnh từ máy ảnh"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/bt_local"
            android:layout_width="wrap_content"
            android:text="Ảnh từ thư viện"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
